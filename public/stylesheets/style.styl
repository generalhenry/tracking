@import 'css3'
@import 'Boiler'
@import 'MCi'
@import 'jquery-ui-1-8-9-MCi'

#main
  width 1000px
  margin 0 auto
  h1
    text-align center
    font-size 2em
    color MCiDarkBlue    
  #display
    border-radius 40px
    width 800px
    height 400px
    padding 25px
    margin 0 auto
    background-color rgba( MCiLightGreen, 0.5 )
    box-shadow inset 0px 0px 10px rgba( MCiLightGreen, 0.8 )
    position relative
    overflow hidden
    cursor pointer
    .viewer
      border-radius 10px
      width 40px
      height 40px
      background-color rgba( MCiYellow, 0.8 )
      box-shadow inset 0px 0px 5px MCiYellow
      position absolute
      display table-cell
      text-align center
      vertical-align middle
      color MCiDarkGrey
      text-shadow 1px 1px 0px MCiWhite
      &.fake
        background-color rgba( MCiOrange, 0.8 )
        box-shadow inset 0px 0px 5px MCiOrange
